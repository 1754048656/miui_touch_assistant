<?xml version="1.0" encoding="utf-8"?>
<animated-selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:id="@id/selected" android:drawable="@drawable/vector_cross_large" />
    <item android:id="@id/normal" android:drawable="@drawable/vector_circle_large" />
    <transition android:drawable="@drawable/animated_circle_to_cross" android:toId="@id/selected" android:fromId="@id/normal" />
    <transition android:drawable="@drawable/animated_cross_to_circle" android:toId="@id/normal" android:fromId="@id/selected" />
</animated-selector>